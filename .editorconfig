# EditorConfig http://editorconfig.org
# see http://editorconfig.org/#download for plugins for your editor

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{md,json,yaml}]
indent_style = space
indent_size = 2

# ignore third party
[node_modules/**.js]
indent_size = N/A
indent_style = N/A
